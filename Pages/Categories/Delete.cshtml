@page
@model PetHotel.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Room Type</h1>

<h3>Are you sure you want to delete this room type?</h3>
<div>
    <h4>Room Type</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
    </dl>
    <img src="@Model.Category.Image" alt="Room Image" class="img-fluid" />
    <br />
    <br />
    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-warning" asp-page="./Index">Back to Room Types List</a>
    </form>
</div>
