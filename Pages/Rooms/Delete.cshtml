@page
@model PetHotel.Pages.Rooms.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Room</h1>

<h3>Are you sure you want to delete this room?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.isOccupied)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.isOccupied)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Category.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Room.Id" />
        <input type="submit" value="Delete Room" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to Rooms List</a>
    </form>
</div>
