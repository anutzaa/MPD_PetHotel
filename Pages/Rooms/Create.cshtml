@page
@model PetHotel.Pages.Rooms.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Room</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Room.RoomNumber" class="control-label"></label>
                <input asp-for="Room.RoomNumber" class="form-control" />
                <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Description" class="control-label"></label>
                <input asp-for="Room.Description" class="form-control" />
                <span asp-validation-for="Room.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.isOccupied" class="control-label">Availability</label>
                <div class="form-check">
                    <input type="radio" asp-for="Room.isOccupied" value="true" class="form-check-input" />
                    <label class="form-check-label" asp-for="Room.isOccupied">Yes</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="Room.isOccupied" value="false" class="form-check-input" />
                    <label class="form-check-label" asp-for="Room.isOccupied">No</label>
                </div>
                <span asp-validation-for="Room.isOccupied" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.CategoryId" class="control-label">Room Type</label>
                <select asp-for="Room.CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                </select>
                <span asp-validation-for="Room.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.ImageFile" class="control-label">Image</label>
                <input asp-for="Room.ImageFile" type="file" class="form-control" />
                <span asp-validation-for="Room.ImageFile" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Add Room" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Rooms List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
