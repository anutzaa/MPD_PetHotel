@page
@model PetHotel.Pages.Bookings.UserBookingModel

@{
    ViewData["Title"] = "UserBooking";
}

<h1>Book a Room</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.Description" class="control-label"></label>
                <input asp-for="Booking.Description" class="form-control" />
                <span asp-validation-for="Booking.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckIn" class="control-label"></label>
                <input asp-for="Booking.CheckIn" class="form-control" />
                <span asp-validation-for="Booking.CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckOut" class="control-label"></label>
                <input asp-for="Booking.CheckOut" class="form-control" />
                <span asp-validation-for="Booking.CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.RoomId" class="control-label">Room Type</label>
                <select asp-for="Booking.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
            <br />
            <h4>Pet details</h4>
            <div class="form-group">
                <label asp-for="Booking.Pet.PetName" class="control-label"></label>
                <input asp-for="Booking.Pet.PetName" class="form-control" />
                <span asp-validation-for="Booking.Pet.PetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Pet.Species" class="control-label"></label>
                <input asp-for="Booking.Pet.Species" class="form-control" />
                <span asp-validation-for="Booking.Pet.Species" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Pet.Age" class="control-label"></label>
                <input asp-for="Booking.Pet.Age" class="form-control" />
                <span asp-validation-for="Booking.Pet.Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Pet.hasSpecialNeeds" class="control-label">Does your pet have special needs?</label>
                <div class="form-check">
                    <input type="radio" asp-for="Booking.Pet.hasSpecialNeeds" value="true" class="form-check-input" />
                    <label class="form-check-label">Yes</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="Booking.Pet.hasSpecialNeeds" value="false" class="form-check-input" />
                    <label class="form-check-label">No</label>
                </div>
                <span asp-validation-for="Booking.Pet.hasSpecialNeeds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Booking Request" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
